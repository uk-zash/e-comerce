<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shop | Home</title>
    <link rel="stylesheet" href="/css/nav.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50">
    <!-- Navbar (will be included) -->
    <%- include('partials/navbar') %>

    <!-- Main Section (Product Grid) -->
    <main class="container mx-auto px-4 py-8">
      <!-- Category Dropdown -->
      <!-- Category Dropdown -->
      <div class="flex justify-between items-center mb-6">
        <select
          class="bg-gray-100 p-2 rounded-md w-full sm:w-auto mb-6 max-w-full sm:max-w-xs overflow-hidden"
        >
          <!-- If there's a default category (e.g., All Categories) -->
          <option value="">All Categories</option>

          <!-- Loop through categories and display name and icon -->
          <% categories.forEach(category => { %>
          <option value="<%= category.id %>">
            <img
              src="<%= category.icon %>"
              alt="<%= category.name %>"
              class="inline-block w-6 h-6 mr-2"
            />
            <%= category.name %>
          </option>
          <% }); %>
        </select>
      </div>

      <!-- Featured Products Section -->
      <div class="mb-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Featured Products</h2>
        <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-6">
          <% featuredProducts.forEach(product => { %>
          <div
            class="bg-white p-4 rounded-lg shadow-lg flex flex-col items-center"
          >
            <img
              src="<%= product.imageUrl %>"
              alt="<%= product.name %>"
              class="w-full h-48 object-cover mb-4 rounded-lg"
            />
            <h3 class="text-lg font-semibold text-gray-800 mb-2">
              <%= product.name %>
            </h3>
            <p class="text-gray-600 mb-2"><%= product.description %></p>
            <div class="flex justify-between items-center w-full mb-4">
              <span class="text-gray-800 font-bold"><%= product.price %></span>
            </div>
            <button
              class="text-white bg-blue-500 p-2 rounded-full hover:bg-blue-600 w-full"
            >
              Add to Cart
            </button>
          </div>
          <% }); %>
        </div>
        <a href="/featured-items" class="text-blue-500 hover:underline"
          >View More</a
        >
      </div>

      <!-- All Products Section -->
      <h2 class="text-2xl font-bold text-gray-800 mb-6">All Products</h2>
      <div
        class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-6"
      >
        <% otherProducts.forEach(product => { %>
        <div
          class="bg-white p-4 rounded-lg shadow-lg flex flex-col items-center"
        >
          <img
            src="<%= product.imageUrl %>"
            alt="<%= product.name %>"
            class="w-full h-48 object-cover mb-4 rounded-lg"
          />
          <h3 class="text-lg font-semibold text-gray-800 mb-2">
            <%= product.name %>
          </h3>
          <p class="text-gray-600 mb-2"><%= product.description %></p>
          <div class="flex justify-between items-center w-full mb-4">
            <span class="text-gray-800 font-bold"><%= product.price %></span>
          </div>
          <button
            class="text-white bg-blue-500 p-2 rounded-full hover:bg-blue-600 w-full"
          >
            Add to Cart
          </button>
        </div>
        <% }); %>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-6 mt-8">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
          <div>
            <h5 class="font-bold mb-4">Company</h5>
            <ul>
              <li><a href="#" class="hover:underline">About Us</a></li>
              <li><a href="#" class="hover:underline">Contact</a></li>
              <li><a href="#" class="hover:underline">Privacy Policy</a></li>
              <li><a href="#" class="hover:underline">Terms of Service</a></li>
            </ul>
          </div>
          <div>
            <h5 class="font-bold mb-4">Customer Service</h5>
            <ul>
              <li><a href="#" class="hover:underline">FAQ</a></li>
              <li><a href="#" class="hover:underline">Returns</a></li>
              <li><a href="#" class="hover:underline">Shipping Info</a></li>
            </ul>
          </div>
          <div>
            <h5 class="font-bold mb-4">Follow Us</h5>
            <ul>
              <li><a href="#" class="hover:underline">Facebook</a></li>
              <li><a href="#" class="hover:underline">Twitter</a></li>
              <li><a href="#" class="hover:underline">Instagram</a></li>
            </ul>
          </div>
          <div>
            <h5 class="font-bold mb-4">Newsletter</h5>
            <input
              type="email"
              class="w-full p-2 rounded-md bg-gray-700 text-white placeholder-gray-400"
              placeholder="Enter your email"
            />
            <button class="mt-2 w-full p-2 bg-blue-500 rounded-md text-white">
              Subscribe
            </button>
          </div>
        </div>
      </div>
    </footer>
    <script src="/js/nav.js"></script>
  </body>
</html>
